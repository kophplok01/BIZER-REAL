<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/grad1"
    android:gravity="center"
    tools:context=".faucet">

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adUnitId="@string/bannerid">
    </com.google.android.gms.ads.AdView>

    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/bannerid"></com.google.android.gms.ads.AdView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="tu dinero"
            android:id="@+id/mi_dinero"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textColor="@color/Black"
            android:textSize="14dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minimo para retirar"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:textColor="@color/Black"
            android:textSize="14dp"
            />

        <ImageView
            android:layout_width="164dp"
            android:layout_height="164dp"
            android:background="@drawable/ic_tether_usdt_logo"
            android:padding="10dp"/>

        <Button
            android:id="@+id/button_start_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/grad1"
            android:fontFamily="sans-serif-condensed"
            android:paddingHorizontal="10dp"
            android:text="Obtener mi recompensa"
            android:textColor="@color/Black" />

        <Button
            android:id="@+id/button_ir_retiro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/grad1"
            android:fontFamily="sans-serif-condensed"
            android:paddingHorizontal="10dp"
            android:text="Retirar mis recompensas"
            android:textColor="@color/Black" />
    </LinearLayout>


</RelativeLayout>