<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grad1"
    android:padding="16dp"
    tools:context=".QuizActivity">

    <RelativeLayout
        android:id="@+id/opacadpr1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/clickaqui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="@string/toc"
                android:textColor="@color/Black" />

            <ProgressBar
                android:id="@+id/cargap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="@string/dialogref"
                android:textColor="@color/abeja_background"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/infopag"
                android:textColor="@color/abeja_background"
                android:textSize="16dp" />




        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/opacadpr2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/clickaqui2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorBackground"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="@string/toc"
                android:textColor="@color/Black" />

            <ProgressBar
                android:id="@+id/cargap2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center"
                android:text="@string/dialogref"
                android:textColor="@color/abeja_background"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="@string/infopag"
                android:textColor="@color/abeja_background"
                android:textSize="16dp" />




        </LinearLayout>


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/mostrador2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_countdown"
        android:id="@+id/text_view_score"
        android:text="@string/Points"
        android:textSize="14dp"
        android:textColor="@color/Black"
        android:freezesText="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_question_count"
        android:text="@string/Current_Cuestion"
        android:textColor="@color/Black"
        android:textSize="14dp"
        android:layout_below="@+id/text_view_score"
        android:freezesText="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_countdown"
        android:textSize="40dp"
        android:layout_below="@id/adView2"
        android:textColor="@color/Black"
        android:text="00:30"
        android:layout_alignParentEnd="true"
        android:freezesText="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_question"
        android:text="blah blah"
        android:textSize="20dp"
        android:layout_above="@+id/radio_group"
        android:layout_marginBottom="16dp"
        android:textAlignment="center"
        android:textColor="@color/Black"
        android:freezesText="true"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radio_group"
        android:layout_centerVertical="true"
        android:freezesText="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 1"
            android:textSize="14dp"
            android:id="@+id/radio_button1"
            android:freezesText="true"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 2"
            android:textSize="14dp"
            android:id="@+id/radio_button2"
            android:freezesText="true"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option 3"
            android:textSize="14dp"
            android:id="@+id/radio_button3"
            android:freezesText="true"/>



    </RadioGroup>

    <Button
        android:id="@+id/button_confirm_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/radio_group"
        android:layout_marginTop="16dp"
        android:background="@drawable/grad1"
        android:text="Confirm"
        android:freezesText="true"/>

    <Button
        android:id="@+id/button_confirm_next2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_confirm_next"
        android:layout_marginTop="16dp"
        android:background="@drawable/grad1"
        android:text="@string/musretirar"
        android:freezesText="true"/>



    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:clickable="false"
        ads:adUnitId="@string/bannerid">
    </com.google.android.gms.ads.AdView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialogref"
        android:textColor="@color/Black"
        android:gravity="center"
        android:layout_above="@id/adView"
        android:layout_marginBottom="10dp"
        android:textSize="16dp"
        />

    <Button
        android:background="@color/trans"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"

        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/trans"
        android:layout_alignParentBottom="true"/>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        android:clickable="false"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adUnitId="@string/bannerid">
    </com.google.android.gms.ads.AdView>

    </RelativeLayout>

</RelativeLayout>